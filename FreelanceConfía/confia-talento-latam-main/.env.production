# Environment Configuration for FreelanceConfía Platform
# Production Optimizations and Feature Flags

# ==============================================
# ENVIRONMENT SETTINGS
# ==============================================
NODE_ENV=production
VITE_APP_VERSION=1.1.0
VITE_BUILD_TARGET=production

# ==============================================
# API CONFIGURATION
# ==============================================
VITE_API_BASE_URL=https://api.freelanceconfia.com
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# WebSocket Configuration
VITE_WS_URL=wss://api.freelanceconfia.com/ws
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=2000

# ==============================================
# PERFORMANCE OPTIMIZATION
# ==============================================

# Bundle and Code Splitting
VITE_ENABLE_CODE_SPLITTING=true
VITE_CHUNK_SIZE_WARNING_LIMIT=500
VITE_ENABLE_TREE_SHAKING=true
VITE_ENABLE_MINIFICATION=true

# Lazy Loading
VITE_ENABLE_LAZY_LOADING=true
VITE_LAZY_LOADING_THRESHOLD=100
VITE_ENABLE_PRELOADING=true

# Image Optimization
VITE_ENABLE_IMAGE_OPTIMIZATION=true
VITE_IMAGE_QUALITY=80
VITE_ENABLE_WEBP=true
VITE_ENABLE_AVIF=true

# Compression
VITE_ENABLE_GZIP=true
VITE_ENABLE_BROTLI=true
VITE_COMPRESSION_LEVEL=6

# Caching
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_MAX_AGE=31536000
VITE_CACHE_STRATEGY=stale-while-revalidate

# ==============================================
# SEO OPTIMIZATION
# ==============================================
VITE_SITE_URL=https://freelanceconfia.com
VITE_SITE_NAME=FreelanceConfía
VITE_SITE_DESCRIPTION=Conecta con los mejores freelancers de América Latina. Pagos seguros, proyectos verificados y soporte 24/7.

# Meta Tags
VITE_ENABLE_META_TAGS=true
VITE_ENABLE_STRUCTURED_DATA=true
VITE_ENABLE_OPEN_GRAPH=true
VITE_ENABLE_TWITTER_CARDS=true

# Social Media
VITE_TWITTER_HANDLE=@FreelanceConfia
VITE_FACEBOOK_APP_ID=your_facebook_app_id

# ==============================================
# ANALYTICS AND MONITORING
# ==============================================

# Google Analytics
VITE_ENABLE_GOOGLE_ANALYTICS=true
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Performance Monitoring
VITE_ENABLE_WEB_VITALS_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# Error Tracking
VITE_ENABLE_ERROR_TRACKING=true
VITE_ERROR_SAMPLE_RATE=1.0
VITE_ENABLE_SENTRY=true
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Custom Analytics
VITE_TRACK_USER_ACTIONS=true
VITE_TRACK_PAGE_VIEWS=true
VITE_TRACK_ERRORS=true

# ==============================================
# SECURITY SETTINGS
# ==============================================

# Content Security Policy
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_ENABLE_X_FRAME_OPTIONS=true

# HTTPS and SSL
VITE_FORCE_HTTPS=true
VITE_SSL_REDIRECT=true

# ==============================================
# PWA CONFIGURATION
# ==============================================
VITE_ENABLE_PWA=true
VITE_PWA_NAME=FreelanceConfía
VITE_PWA_SHORT_NAME=FreelanceConfía
VITE_PWA_THEME_COLOR=#1e40af
VITE_PWA_BACKGROUND_COLOR=#ffffff

# Offline Support
VITE_ENABLE_OFFLINE_SUPPORT=true
VITE_ENABLE_BACKGROUND_SYNC=true

# Push Notifications
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key

# ==============================================
# CDN AND ASSET OPTIMIZATION
# ==============================================

# CDN Configuration
VITE_ENABLE_CDN=true
VITE_CDN_URL=https://cdn.freelanceconfia.com

# Image CDN
VITE_ENABLE_IMAGE_CDN=true
VITE_IMAGE_CDN_URL=https://images.freelanceconfia.com

# Font Optimization
VITE_ENABLE_FONT_CDN=true
VITE_FONT_DISPLAY=swap

# ==============================================
# FEATURE FLAGS
# ==============================================

# Core Features
VITE_ENABLE_REAL_TIME_CHAT=true
VITE_ENABLE_VIDEO_CALLS=true
VITE_ENABLE_VOICE_CALLS=true
VITE_ENABLE_FILE_SHARING=true

# Advanced Features
VITE_ENABLE_AI_MATCHING=true
VITE_ENABLE_SMART_RECOMMENDATIONS=true
VITE_ENABLE_AUTOMATED_TESTING=true
VITE_ENABLE_BLOCKCHAIN_PAYMENTS=false

# Beta Features
VITE_ENABLE_ADVANCED_SEARCH=false
VITE_ENABLE_AI_RECOMMENDATIONS=false
VITE_ENABLE_VOICE_CHAT=false

# Admin Features
VITE_ENABLE_ADMIN_ANALYTICS=true
VITE_ENABLE_BULK_OPERATIONS=true
VITE_ENABLE_ADVANCED_REPORTING=true

# ==============================================
# BUILD CONFIGURATION
# ==============================================

# Output Settings
VITE_OUTPUT_DIR=dist
VITE_ASSETS_DIR=assets
VITE_PUBLIC_BASE_PATH=/

# Source Maps
VITE_ENABLE_SOURCE_MAPS=false
VITE_SOURCE_MAP_TYPE=hidden

# Bundle Analysis
VITE_ENABLE_BUNDLE_ANALYZER=false
VITE_BUNDLE_ANALYZER_PORT=8888

# ==============================================
# EXTERNAL SERVICES
# ==============================================

# Payment Processing
VITE_STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# Cloud Storage
VITE_AWS_S3_BUCKET=freelanceconfia-assets
VITE_AWS_CLOUDFRONT_URL=https://assets.freelanceconfia.com

# Email Service
VITE_SENDGRID_API_KEY=your_sendgrid_api_key

# SMS Service
VITE_TWILIO_ACCOUNT_SID=your_twilio_account_sid

# ==============================================
# LOCALIZATION
# ==============================================
VITE_DEFAULT_LANGUAGE=es
VITE_SUPPORTED_LANGUAGES=es,pt,en
VITE_ENABLE_RTL=false
VITE_ENABLE_AUTO_TRANSLATE=true

# ==============================================
# DEVELOPMENT OVERRIDES
# ==============================================
# These will be overridden in development mode

# Development API
# VITE_API_BASE_URL=http://localhost:3000/api

# Development Analytics
# VITE_ENABLE_GOOGLE_ANALYTICS=false
# VITE_ENABLE_SENTRY=false

# Development Performance
# VITE_PERFORMANCE_SAMPLE_RATE=1.0
# VITE_ENABLE_SOURCE_MAPS=true

# Development Security
# VITE_ENABLE_CSP=false
# VITE_FORCE_HTTPS=false

# ==============================================
# STAGING OVERRIDES
# ==============================================
# For staging environment

# VITE_API_BASE_URL=https://staging-api.freelanceconfia.com
# VITE_GOOGLE_ANALYTICS_ID=G-STAGING-ID
# VITE_ENABLE_BETA_FEATURES=true