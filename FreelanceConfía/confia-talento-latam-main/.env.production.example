# =============================================================================
# FREELANCECONFIA - PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
# ⚠️  CRITICAL: This file contains sensitive production credentials
# Never commit this file to version control
# =============================================================================

# Application Environment
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://freelanceconfia.com
BACKEND_URL=https://api.freelanceconfia.com

# Database Configuration
MONGO_ROOT_USERNAME=freelanceconfia_admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
MONGO_DB_NAME=freelanceconfia_production
MONGODB_URI=mongodb://freelanceconfia_admin:CHANGE_THIS_STRONG_PASSWORD_123!@mongodb:27017/freelanceconfia_production?authSource=admin

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD_456!@redis:6379

# JWT Secrets (Generate strong random strings)
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_64_characters_recommended
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_here_minimum_64_characters_recommended
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Email Service Configuration (Using SendGrid/Gmail/SES)
EMAIL_SERVICE=sendgrid
EMAIL_USER=noreply@freelanceconfia.com
EMAIL_PASS=your_email_service_api_key_here
EMAIL_FROM=FreelanceConfía <noreply@freelanceconfia.com>

# Cloudinary for File Uploads
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Twilio for SMS/WhatsApp
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI for AI Features
OPENAI_API_KEY=sk-your_openai_api_key_here

# Push Notifications (VAPID Keys)
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Google Services
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_minimum_32_characters
CORS_ORIGIN=https://freelanceconfia.com,https://www.freelanceconfia.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Admin Configuration
ADMIN_EMAIL=admin@freelanceconfia.com
ADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD_789!

# Monitoring & Analytics
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD!
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/freelanceconfia.crt
SSL_KEY_PATH=/etc/nginx/ssl/freelanceconfia.key

# CDN Configuration
CDN_URL=https://cdn.freelanceconfia.com

# Backup Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_for_backups
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_for_backups
AWS_S3_BUCKET=freelanceconfia-backups
AWS_REGION=us-east-1

# =============================================================================
# INSTRUCTIONS FOR DEPLOYMENT:
# =============================================================================
# 1. Copy this file to .env.production
# 2. Replace ALL placeholder values with actual production credentials
# 3. Generate strong random passwords/secrets using: openssl rand -hex 32
# 4. Set up SSL certificates
# 5. Configure DNS records
# 6. Set up monitoring and backup systems
# 7. Test thoroughly in staging environment before production deployment
# =============================================================================